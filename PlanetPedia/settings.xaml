<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanetPedia.settings"
             Title="">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                x:Name="check"
                Text="Проверка..."
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"
                Margin="15,5,0,5" />
            <BoxView 
                BackgroundColor="{AppThemeBinding Light=Black, Dark=White}"
                HeightRequest="3"/>
            <Label 
                Text="Информация о приложении"
                FontAttributes="Italic"
                Margin="15,10,0,0"/>
            <Border Stroke="Black" BackgroundColor="#dddddd" Margin="15,5,15,10">
                <VerticalStackLayout>
                    <Label 
                        Text="Приложение: PlanetPedia - всё о космосе"
                        FontSize="14"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Margin="15,10,0,0"/>
                    <Label 
                        Text="Версия: 1.0.0"
                        FontSize="14"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Margin="15,15,0,0"/>
                    <Label 
                        Text="Разработчик: Ярослав Тютюнник (TeZoR)"
                        FontSize="14"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Margin="15,15,0,0"/>
                    <Button 
                        x:Name="wikib"
                        Text="Источник: Wikipedia"
                        FontSize="14"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        Margin="1,15,0,0"
                        Clicked="wikib_Clicked"/>
                    <Button 
                        x:Name="cosmob"
                        Text="Источник видео: Kosmo"
                        FontSize="14"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        Margin="1,0,0,0"
                        Clicked="cosmob_Clicked"/>
                    <Button 
                        x:Name="objb"
                        Text="3D модели: Sketchfab"
                        FontSize="14"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        Margin="1,0,0,0"
                        Clicked="objb_Clicked"/>
                    <Label 
                        Text="Спасибо за использование :)"
                        FontSize="14"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Margin="15,5,0,5"/>
                </VerticalStackLayout>
            </Border>
            <BoxView 
                BackgroundColor="{AppThemeBinding Light=Black, Dark=White}"
                HeightRequest="3"/>
            <Label 
                Text="Настройки страницы"
                FontAttributes="Italic"
                Margin="15,10,0,0"/>
            <Border Stroke="Black" BackgroundColor="#dddddd" Margin="15,5,15,10">
                <VerticalStackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                        <Switch 
                            x:Name="videos"
                            Margin="15,0,0,0"
                            Toggled="video_Toggled"
                            OnColor="#aaaaaa"/>
                        <Label
                            x:Name="vid_desc"
                            TextColor="Black"
                            Text="Просмотр видео"
                            Margin="-100,9,0,0"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                        <Switch 
                            x:Name="objs"
                            Margin="15,0,0,0"
                            Toggled="objs_Toggled"
                            OnColor="#aaaaaa"/>
                        <Label
                            x:Name="obj_desc"
                            Text="Просмотр 3D"
                            TextColor="Black"
                            Margin="-100,9,0,0"/>
                    </StackLayout>
                    <Label 
                        Text="Используйте данные настройки чтобы повысить производительность приложения!"
                        TextColor="Black"
                        Margin="17,5,0,5"
                        FontSize="12"/>
                </VerticalStackLayout>
            </Border>
            <BoxView 
                BackgroundColor="Black"
                HeightRequest="3"/>
            <Label 
                Text="Настройки космо-карт"
                FontAttributes="Italic"
                Margin="15,10,0,0"/>
            <Border Stroke="Black" BackgroundColor="#dddddd" Margin="15,5,15,10">
                <VerticalStackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                        <Switch 
                            x:Name="music"
                            Margin="15,0,0,0"
                            Toggled="music_Toggled"
                            OnColor="#aaaaaa"/>
                        <Label
                            x:Name="music_desc"
                            Text="Музыка"
                            TextColor="Black"
                            Margin="-100,9,0,0"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                        <Switch 
                            x:Name="vibro"
                            Margin="15,0,0,0"
                            Toggled="vibro_Toggled"
                            OnColor="#aaaaaa"/>
                        <Label
                            x:Name="vibro_desc"
                            Text="Вибрация"
                            TextColor="Black"
                            Margin="-100,9,0,5"/>
                    </StackLayout>
                </VerticalStackLayout>
            </Border>
            <BoxView 
                BackgroundColor="Black"
                HeightRequest="3"/>
            <Label 
                Text="Оффлайн загрузка"
                FontAttributes="Italic"
                Margin="15,10,0,0"/>
            <Border Stroke="Black" BackgroundColor="#dddddd" Margin="15,5,15,10">
                <VerticalStackLayout>
                    <Button 
                        x:Name="offlineb"
                        HorizontalOptions="Center"
                        Text="Просмотр загрузок"
                        Margin="30, 10"
                        MaximumWidthRequest="500"
                        TextColor="White"
                        Clicked="offlineb_Clicked"/>
                </VerticalStackLayout>
            </Border>
            <BoxView 
                BackgroundColor="Black"
                HeightRequest="3"/>
            <Label 
                Text="Тесты"
                FontAttributes="Italic"
                Margin="15,10,0,0"/>
            <Label 
                x:Name="count"
                Text="Пройдено тестов: 0"
                Margin="15,10,0,0"
                FontAttributes="Italic"/>
            <Border Stroke="Black" BackgroundColor="#dddddd" Margin="10,5,10,0" MinimumHeightRequest="100" MaximumHeightRequest="700">
                <ScrollView>
                    <VerticalStackLayout x:Name="testsview">
                    
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
            <Button 
                x:Name="ton"
                Text="Загрузка контента..."
                FontSize="9"
                WidthRequest="120"
                HorizontalOptions="Start"
                BackgroundColor="Transparent"
                TextColor="{AppThemeBinding Dark=White, Light=Black}"
                Margin="0,10,0,0"
                Clicked="ton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>