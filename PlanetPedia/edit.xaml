<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanetPedia.edit"
             Title="">
    <Grid>
        <Image 
        Source="background.png"
        Opacity="0.5"
        Aspect="AspectFill"/>
        <ScrollView>
            <VerticalStackLayout x:Name="stack">
                <Button 
                    x:Name="save"
                    Text="Сохранить"
                    TextColor="White"
                    BorderColor="Black"
                    BorderWidth="2"
                    WidthRequest="180"
                    Margin="0,30,0,50"
                    Clicked="save_Clicked"/>
                <Entry 
                    x:Name="title"
                    FontSize="30"
                    FontAttributes="Bold"
                    WidthRequest="300"
                    HorizontalTextAlignment="Center"/>
                <Image 
        x:Name="img"
        Source="sun.png"
        WidthRequest="300"
        HeightRequest="300"
        HorizontalOptions="Center"
        Margin="0,20,0,0"/>
                <Entry 
                    x:Name="imge"
                    WidthRequest="300"/>
                <VerticalStackLayout x:Name="block1">
                    <Label 
                x:Name="lbl1"
        Text="Характеристики"
        FontSize="20"
        FontAttributes="Bold"
        Margin="15,20,0,0"/>
                    <Border x:Name="propertybox" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <Editor 
                            x:Name="prope"
                            Margin="5"
                            HeightRequest="300"/>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="block2">
                    <Label 
                x:Name="lbl2"
        Text="Основная информация"
        FontSize="20"
        FontAttributes="Bold"
        Margin="15,20,0,0"/>
                    <Border x:Name="aboutbox" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <Editor 
                            x:Name="aboute"
                            Margin="5"
                            HeightRequest="300"/>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="block3">
                    <Label 
                x:Name="lbl3"
        Text="Интересные факты"
        FontSize="20"
        FontAttributes="Bold"
Margin="15,20,0,0"/>
                    <Border x:Name="uniquebox" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <Editor 
                            x:Name="uniquee"
                            Margin="5"
                            HeightRequest="300" />
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="block5">
                    <Label 
                x:Name="lbl5"
        Text="Галерея"
        FontSize="20"
        FontAttributes="Bold"
        Margin="15,20,0,0"/>
                    <Border x:Name="picbox" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <Editor 
                            x:Name="pice"
                            Text="[ссылка на картунку]|[подпись];[ссылка на картинку]|[подпись]"
                            Margin="9"
                            HeightRequest="100"/>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="block6">
                    <Label 
                x:Name="lbl6"
        Text="Видео"
        FontSize="20"
        FontAttributes="Bold"
        Margin="15,20,0,0"/>
                    <Border x:Name="vidbox" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <Entry 
                            x:Name="vide"
                            Text="URL видео"
                            Margin="5"/>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="block7">
                    <Label 
                x:Name="lbl7"
        Text="3D Просмотр"
        FontSize="20"
        FontAttributes="Bold"
        Margin="15,20,0,0"/>
                    <Border x:Name="box3d" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <Entry 
                            x:Name="obje"
                            Text="URL 3D-объекта"
                            Margin="5"/>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="block8">
                    <Label 
                x:Name="lbl8"
        Text="Тесты"
        FontSize="20"
        FontAttributes="Bold"
        Margin="15,20,0,0"/>
                    <Border x:Name="tests" Margin="10,5,10,0" BackgroundColor="#eeeeee" Stroke="Black">
                        <VerticalStackLayout x:Name="tests_stack">

                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>