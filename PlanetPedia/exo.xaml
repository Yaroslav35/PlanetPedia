                    Text="Обитаемая экзопланета у солнцеподобной звезды"
                    FontSize="14"
                    FontAttributes="Italic"
                    HorizontalTextAlignment="Center"
                    TextColor="Black"
                    Margin="15,20,15,0"/>
                        <Button 
                    x:Name="kepler22b"
                    Text="Подробнее..."
                    FontSize="9"
                    WidthRequest="100"
                    HeightRequest="30"
                    CornerRadius="5"
                    BorderColor="Black"
                    BorderWidth="2"
                    Margin="0,30,0,15"
                    TextColor="White"
                    Clicked="kepler22b_Clicked"/>
