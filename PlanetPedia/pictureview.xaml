<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanetPedia.pictureview"
             Title="Просмотр картинки">
    <ScrollView>
        <VerticalStackLayout x:Name="MainLayout">
            <Border Margin="5,20,5,5" Stroke="Black" BackgroundColor="#eeeeee">
                <VerticalStackLayout>
                    <Label 
                        x:Name="descl"
                        Text=""
                        FontSize="20"
                        FontAttributes="Bold"
                        TextColor="Black"
                        Margin="10,5,0,0"/>
                    <Label 
                        x:Name="from"
                        Text=""
                        FontSize="14"
                        FontAttributes="Italic"
                        TextColor="Black"
                        Margin="10,5,0,0"/>

                    <AbsoluteLayout 
                        x:Name="imageContainer"
                        HeightRequest="400"
                        Margin="5,10"
                        BackgroundColor="Transparent">

                        <Image 
                            x:Name="pic"
                            Aspect="AspectFit" />
                    </AbsoluteLayout>

                    <Label 
                        Text="* Картинка поддерживает маштабирование"
                        FontSize="12"
                        FontAttributes="Italic"
                        Margin="10,0,0,0"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>